{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "AuthorizeRequestV1",
  "description": "Event produced by Gateway when an authorization is initiated",
  "type": "object",
  "properties": {
    "eventType": {
      "const": "AUTHORIZE_REQUESTED"
    },
    "transactionId": {
      "type": "string",
      "format": "uuid"
    },
    "correlationId": {
      "type": "string",
      "format": "uuid"
    },
    "merchantId": {
      "type": "string"
    },
    "payerId": {
      "type": "string"
    },
    "orderId": {
      "type": "string"
    },
    "amount": {
      "type": "number"
    },
    "currency": {
      "type": "string"
    },
    "cardMasked": {
      "type": "string"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time"
    }
  },
  "required": [
    "eventType",
    "transactionId",
    "correlationId",
    "merchantId",
    "payerId",
    "amount",
    "currency",
    "timestamp"
  ]
}
